<h1 class="page-title">Editing page</h1>

<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "text big" %>
  </p>
  
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :class => "text" %>
  </p>
  
  <div id="meta" class="buttons">
    <%= f.submit "Update page" %> or <%= link_to 'Cancel', page_path(@page) %>
  </div>
<% end %>

<% side_block do %>
  <ul>
    <li><%= link_to "Go back to #{@page.title}", page_path(@page) %></li>
    <li><%= link_to 'Create new page', new_page_path %></li>
    <li><%= link_to 'Main page', root_path %></li>
    <li><%= link_to 'View the list of all pages', pages_path %></li>
  </ul>
<% end %>

<% side_block("Revisions") do %>
  <p>Total revisions: <%= @page.log.size %></p>

  <p>
    <ul>
      <%= history_list_for(@page) %>
    </ul>
    <p class="meta-link"><%= link_to 'view all revisions', revisions_page_path(@page) %></p>
  </p>
<% end %>

<%= formatter_help %>